<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_product"
    android:background="@drawable/round_background"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="Hinh"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_tensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingHorizontal="5dp"
        android:textSize="14dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/avatar_radius"
        app:layout_constraintStart_toStartOf="@+id/img_product"
        app:layout_constraintTop_toBottomOf="@+id/img_product" />

    <TextView
        android:id="@+id/txt_gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:paddingHorizontal="5dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/txt_tensp"
        app:layout_constraintTop_toBottomOf="@+id/txt_tensp" />


</androidx.constraintlayout.widget.ConstraintLayout>